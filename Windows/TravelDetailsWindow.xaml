<Window x:Class="TravelPal_Newton.Windows.TravelDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelPal_Newton.Windows"
        mc:Ignorable="d"
        Title="TravelDetailsWindow" Height="750" Width="800" WindowStyle="None" WindowStartupLocation="CenterScreen"  AllowsTransparency="True" Background="Transparent">
    <Window.Resources>
        <Style x:Key="Labels" TargetType="Label">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="purple"/>
        </Style>
        <Style x:Key="Buttons" TargetType="Button">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="MintCream"/>
            <Setter Property="Background" Value="#a295f3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="6" BorderThickness="1" Background="{TemplateBinding Background}" BorderBrush="white" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3d3477"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border CornerRadius="35" BorderThickness="24">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color= "MintCream" Offset="0.2"/>
                <GradientStop Color="#8a7af0" Offset="0.7"/>
                <GradientStop Color= "MediumSlateBlue" Offset="0.8"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid Name="TravelDetailsGrid">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color= "MintCream" Offset="0.2"/>
                    <GradientStop Color="#8a7af0" Offset="0.7"/>
                    <GradientStop Color= "MediumSlateBlue" Offset="0.8"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Travel type: " Style="{StaticResource Labels}"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="24" FontFamily="Leelawadee UI Semilight" />
            <Label Name="lblTravelersFeedback"  FontSize="14" Content="test" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" VerticalContentAlignment="Bottom" VerticalAlignment="Top"/>
            <Label Name="lblCountryFeedback" Content="test" Grid.Row="1" Grid.Column="0" Height="30" VerticalContentAlignment="Bottom" Grid.ColumnSpan="2" VerticalAlignment="Top" FontSize="14"/>
            <Label Name="lblEndDateFeedback" Content="test" Grid.Row="2" Grid.Column="3" Height="30" VerticalContentAlignment="Bottom" Grid.ColumnSpan="2" VerticalAlignment="Top" FontSize="14"/>
            <Label Name="lblDestinationFeedback" Content="test" Grid.Row="2" Grid.Column="0"  Height="30" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14"/>
            <Label Name="lblStartDateFeedback" Content="test" Grid.Row="1" Grid.Column="3" Height="30"  VerticalContentAlignment="Center" FontSize="14" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Name="lblFormatInstruction"  Content="Required format: DD/MM/YYYY" Grid.ColumnSpan="2" Grid.Column="3" VerticalAlignment="Bottom" FontSize="14" />
            <Label Content="Country:" FontFamily="Leelawadee UI Semilight" Style="{StaticResource Labels}" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
            <Label Content="Destination:" FontFamily="Leelawadee UI Semilight" Style="{StaticResource Labels}" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" />
            <Label Content="Travelers:" FontFamily="Leelawadee UI Semilight" Style="{StaticResource Labels}" Grid.Row="3" HorizontalContentAlignment="Center" FontSize="20" VerticalContentAlignment="Center"/>
            <Label Content="Traveldays:" FontFamily="Leelawadee UI Semilight" Style="{StaticResource Labels}" Grid.Row="4" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
            <Label Content="Enddate:" FontFamily="Leelawadee UI Semilight" Style="{StaticResource Labels}" Grid.Row="2" Grid.Column="3" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="20"/>
            <Label Content="Startdate:" FontFamily="Leelawadee UI Semilight" Style="{StaticResource Labels}" Grid.Row="1" Grid.Column="3" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="20"/>
            <Label Content="PackingList: " FontFamily="Leelawadee UI Semilight" Style="{StaticResource Labels}" Grid.Row="3" Grid.Column="3" FontSize="18" VerticalAlignment="Bottom"/>
            <Label Name="lbldetails" Content="Meeting info:" Grid.Column="3" Visibility="Hidden" Grid.ColumnSpan="2" Grid.Row="4" Style="{StaticResource Labels}" FontFamily="Leelawadee UI Semilight" FontSize="18" VerticalContentAlignment="Bottom"/>
            <ListView Name="ListViewPackingList" Grid.Row="3" Grid.RowSpan="2"  Grid.Column="4" Grid.ColumnSpan="2" Height="70"  Background="white"/>
            <ListView Name="ListViewMeetingDetails" Visibility="Hidden" Grid.Row="4" Height="60" Grid.RowSpan="2" Grid.Column="4" Grid.ColumnSpan="2"/>
            <TextBox Name="txtTravelType" Margin="15" Grid.Column="1" Grid.ColumnSpan="2" Height="40" Width="180" HorizontalAlignment="Left"/>
            <TextBox x:Name="txtCountry" Height="40" Grid.Row="1" Grid.Column="1" Margin="15" Grid.ColumnSpan="2" Width="160" HorizontalAlignment="Left" VerticalContentAlignment="Center" FontSize="16" Padding="5" IsEnabled="False"/>
            <TextBox x:Name="txtDestination" Height="40" Grid.Row="2" Grid.Column="1" Margin="15" Grid.ColumnSpan="2" Width="160" HorizontalAlignment="Left" VerticalContentAlignment="Center" FontSize="16" Padding="5" IsEnabled="False"/>
            <TextBox x:Name="txtTravelers" Height="40" Grid.Row="3" Grid.Column="1" Margin="15" Width="65" HorizontalAlignment="Left" VerticalContentAlignment="Center" FontSize="16" Padding="5" IsEnabled="False"/>
            <TextBox x:Name="txtTravelDays" Height="40" Grid.Row="4" Grid.Column="1" Margin="15" Width="65" HorizontalAlignment="Left" VerticalContentAlignment="Center" FontSize="16" Padding="5" IsEnabled="False"/>
            <TextBox Name="txtStartDate" Height="40" Grid.Row="1" Grid.Column="4"  Margin="15" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="False"/>
            <TextBox Name="txtEndDate" Height="40" Grid.Row="2" Grid.Column="4" Margin="15" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="False" />
            <Button Name="btnEdit" Content="Edit" Height="40" Width="70" Margin="10" Grid.Column="5" Grid.Row="6" Style="{StaticResource Buttons}" Click="btnEdit_Click" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
            <Button Name="btnOK" Content="OK"  Grid.Column="5"  Height="40"  Visibility="Hidden"  Width="70" Margin="10" Grid.Row="6" Style="{StaticResource Buttons}" Click="btnOK_Click" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
            <Button Name="btnReturn" Height="40" Content="Return" Style="{StaticResource Buttons}" Grid.Row="6" Margin="10" Grid.Column="4" Width="90" Click="btnReturn_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
            <CheckBox Name="checkAllinclusive"  IsChecked="{Binding Path=AllInclusive}" Content="All inclusive" Grid.Column="4" Grid.Row="3" HorizontalAlignment="Right" FontSize="18"/>
        </Grid>
    </Border>
</Window>
